---
import Carousel from './Carousel.astro';

const projects = [
  {
    title: 'Proyecto 1',
    technologies: ['TailwindCSS', 'Astro', 'Unity'],
    description: 'Este es un proyecto que muestra...',
    images: ['/images/proyecto1-1.png', '/images/proyecto1-2.png'],
    iframe: `<iframe src="https://juego1.com" class="w-full h-64"></iframe>`,
  },
  {
    title: 'Proyecto 2',
    technologies: ['React', 'Godot'],
    description: 'Otro proyecto que demuestra...',
    images: ['/images/proyecto2-1.png', '/images/proyecto2-2.png'],
    iframe: '',
  },
];
---

<section id="projects" class="py-20 bg-gray-100">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center">Proyectos</h2>
    {projects.map(project => (
      <div class="mb-12">
        <h3 class="text-2xl font-bold">{project.title}</h3>
        <Carousel images={project.images} />
        <div class="flex space-x-2 mt-4">
          {project.technologies.map(tech => (
            <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded">{tech}</span>
          ))}
        </div>
        <p class="text-gray-700 mt-4">{project.description}</p>
        {project.iframe && <div class="mt-4" set:html={project.iframe} />}
      </div>
    ))}
  </div>
</section>
